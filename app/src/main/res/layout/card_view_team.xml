<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8_dp"
            android:elevation="@dimen/dimen_8_dp"
            android:padding="@dimen/dimen_8_dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mImageViewTeamIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/nfl_dallas_cowboys" />

                <TextView
                    android:id="@+id/mTextViewTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mImageViewTeamIcon"
                    android:fontFamily="sans-serif-condensed-light"
                    android:paddingStart="@dimen/dimen_20_dp"
                    android:paddingEnd="@dimen/dimen_20_dp"
                    android:textSize="20sp"
                    tools:text="Cowboys" />

                <CheckBox
                    android:id="@+id/mCheckBoxTeamToShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true" />

                <!--            <CheckBox-->
                <!--                android:id="@+id/checkb"-->
                <!--                android:layout_width="115dp"-->
                <!--                android:layout_height="50dp"-->
                <!--                android:button="@drawable/custom_checkbox"-->
