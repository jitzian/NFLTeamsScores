<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mImageViewCity"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/mTextViewCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="232dp"
                    android:layout_marginTop="123dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/color_white"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/mTextViewSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Some text"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mTextViewOverviewParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Some other text"
                    android:textColor="#555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <Button
                    android:id="@+id/mButtonDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Details"
                    android:theme="@style/PrimaryFlatButton" />

                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/dimen_50_dp"-->
                <!--                    android:layout_height="@dimen/dimen_40_dp"-->
                <!--                    android:id="@+id/mImageViewGotoLocation"-->
                <!--                    android:src="@drawable/route" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLinearLayoutContainerSubItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextViewCriticalReadingAvgScoreLabel"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:text="Reading:"
                        android:textColor="#555"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/mTextViewCriticalReadingAvgScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some other text"
                        android:textColor="#555" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextViewMathAvgScoreLabel"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:text="Math:      "
                        android:textColor="#555"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/mTextViewMathAvgScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some other text"
                        android:textColor="#555" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextViewWritingAvgScoreLabel"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="16dp"
                        android:text="Writ45ing:   "
                        android:textColor="#555"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/mTextViewWritingAvgScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some other text"
                        android:textColor="#555" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>